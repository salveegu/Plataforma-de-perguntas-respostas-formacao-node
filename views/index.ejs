        <h3>Isso é uma mensagem de erro!</h3>

        <%}else  {%>
         <h3>Não deu erro!</h3>
     <%}%> -->

     <% produtos.forEach(function(produto) { %>
        <hr>
        <h3><%= produto.nome %></h3>
        <h4><%= produto.preco %></h4>
    <% }) %>  

   
 
</body>
</html>

